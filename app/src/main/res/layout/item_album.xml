<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAlbumName"
        style="@style/tvStyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvAlbum"
        android:layout_alignStart="@+id/cvAlbum"
        android:layout_alignEnd="@+id/cvAlbum"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:text="@string/tvAlbumName"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/cvAlbum"
        android:layout_alignRight="@+id/cvAlbum" />

    <TextView
        android:id="@+id/tvAlbumSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAlbumName"
        android:layout_alignStart="@+id/cvAlbum"
        android:layout_alignEnd="@+id/cvAlbum"
        android:ellipsize="marquee"
        android:fontFamily="@font/comfortaa"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/tvAlbumSinger"
        android:textColor="@color/colorLight9"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignLeft="@+id/cvAlbum"
        android:layout_alignRight="@+id/cvAlbum" />

</RelativeLayout>