<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@color/colorMain2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_logo_transparent"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/btnLoginFacebook"
        style="@style/btnLogin"
        android:layout_above="@+id/btnLoginGoogle"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_loginfb"
        android:drawableStart="@drawable/logo_facebook"
        android:text="@string/btnLoginFacebook" />

    <Button
        android:id="@+id/btnLoginGoogle"
        style="@style/btnLogin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_logingg"
        android:drawableStart="@drawable/logo_google"
        android:text="@string/btnLoginGoogle" />


</RelativeLayout>